	<div id="buscador">	
		<input type="text" name="usuario" placeholder="Usuario" size="30">
		<input type="text" name="carrera" placeholder="Carrera" size="1">
		<input type="text" name="archivo" placeholder="Archivo" size="8">
		<input type="date" name="fecha1" placeholder="Fecha Inicial" size="4">
		<input type="date" name="fecha2" placeholder="Fecha Final" size="4">
		<input type="text" name="monto" placeholder="Monto" size="1">
		<input type="text" name="estado" placeholder="Estado" size="1">
		<input type="button" name="buscar" value="Buscar" id="btn_buscar">
	</div>	
	<table>
		<tr>
			<th>Usuario</th>
			<th>Carrera</th>
			<th>Archivo</th>
			<th>Fecha</th>
			<th>Monto</th>
			<th>Estado</th>
			<th>Entrega</th>
		</tr>
		<% @registros.each do |n| %>
			<tr>
				<td><%= n.usuario %></td>
				<td><%= n.carrera %></td>
				<td><%= n.archivo %></td>
				<td><%= n.created_at %></td>
				<td>$<%= n.monto %></td>
				<td><%= n.pago %></td>
				<td><input type="button" name="entregar" value="Entregar"></td>
			</tr>
		<% end %>
